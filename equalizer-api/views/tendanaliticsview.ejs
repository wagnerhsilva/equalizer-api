<!DOCTYPE html>
<html lang="en-us" ng-app="app">

<head>
    <% include partials/head %>
</head>

<body class="">
    <% include partials/header %>
        <div id="main" role="main">

            <!-- RIBBON -->
            <div id="ribbon">

                <!-- breadcrumb -->
                <ol class="breadcrumb">
                    <li>Configuração</li>
                    <li>Análise de Tendências</li>
                </ol>
            </div>
            <div id="content">
                <div class="row">
                    <article class="col-sm-12 col-md-12 col-lg-12">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                            <header>
                                <span class="widget-icon"><i class="fa fa-edit"></i></span>
                                <h2>Análise de Tendências</h2>

                            </header>

                            <!-- widget div-->
                            <div>

                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->

                                </div>
                                <!-- end widget edit box -->

                                <!-- widget content -->
                                <div class="widget-body">

                                    <form id="smart-form-register" class="smart-form">
                                        <ng-view></ng-view>
                                    </form>

                                </div>
                                <!-- end widget content -->

                            </div>
                            <!-- end widget div -->

                        </div>
                        <!-- end widget -->
                    </article>

                </div>
                <script type="text/ng-template" id="/tendanalitics.html">
                    <header>
                        Configurações de Análise de Tendência
                    </header>
                    <div class="input-group-text">
                        <input type="checkbox" id="refreshButton" ng-model="tendenceConfigs.is_on" ng-click=""><p>Habilitar Análise de Tendência</p>
                    </div>
                    <section>
                        <div class="widget-body no-padding">
                            <form name="form2">
                                <div class="row" style="padding: 20px;">
                                    <section class="col-sm-3 col-md-3 col-lg-3">
                                        <fieldset>
                                            <section>
                                                <label class="label"> Data de Instalação</label>
                                                <input type="text" name="request" id="txtDate" readonly ng-model="tendenceConfigs.install_date" placeholder="Selecione a data" required class="datepicker" data-dateformat='dd/mm/yy'<%if (userAccess != 'administrador') {%>  disabled  <%}%>>
                                            </section>
                                            <section>
                                                    <label class="label"> Data Referência Zero</label>
                                                    <input type="number" min="0" max="99" ng-model="tendenceConfigs.zero_date_months" 
                                                     name="zeroRefMounths" placeholder="Meses" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" required>
                                                </section>
                                                <section>
                                                    <label class="label">Periodicidade</label>
                                                    <input type="number" min="0" max="99" ng-model="tendenceConfigs.period_date_months" name="Periodicidade" placeholder="Periodicidade" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" required>
                                                </section>
                                        </fieldset>
                                    </section>
                                    <section class="col-sm-6 col-md-6 col-lg-6">
                                        <fieldset>
                                            <section>                                               
                                                <table class="table table-striped table-bordered table-hover">
                                                    <thead>
                                                        <tr>
                                                            <td>Paramêtro</td>
                                                            <td>Mínimo</td>
                                                            <td>Máximo</td>
                                                        </tr>
                                                        </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Impedância</td>
                                                            <td>
                                                                <label class="input">
                                                                    <input type="text" name="alarmeImpeMin" id="alarmeImpeMin" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" ng-model="tendenceConfigs.impe_min" placeholder="Impedância Min.">
                                                                    <b class="tooltip tooltip-bottom-right"> Impedância Min.</b>
                                                                </label>
                                                            </td>

                                                            <td>
                                                                <label class="input">
                                                                    <input type="text" name="alarmeImpeMax" id="alarmeImpeMax" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" ng-model="tendenceConfigs.impe_max"placeholder="Impedância Max.">
                                                                    <b class="tooltip tooltip-bottom-right"> Impedância Max.</b>
                                                                </label>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td>Temperatura</td>
                                                            <td>
                                                                <label class="input">
                                                                    <input type="text" name="alarmeTempMin" id="alarmeTempMin" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" ng-model="tendenceConfigs.temp_min" placeholder="Temperatura Min.">
                                                                    <b class="tooltip tooltip-bottom-right"> Temperatura Min.</b>
                                                                </label>
                                                            </td>

                                                            <td>
                                                                <label class="input">
                                                                    <input type="text" name="alarmeTempMax" id="alarmeTempMax" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" ng-model="tendenceConfigs.temp_max" placeholder="Temperatura Max.">
                                                                    <b class="tooltip tooltip-bottom-right"> Temperatura Max.</b>
                                                                </label>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </section>
                                        </fieldset>
                                    </section>
                                </div>
                                <footer>
                                    <button id="btnApply" class="btn btn-primary" ng-disabled="acessoUsuario != 'administrador' && acessoUsuario != 'local'" ng-click="applyConfiguration();">Aplicar</button>
                                </footer>
                            </form>
                        </div>
                    </section>
                    </fieldset>

                </script>

                <script>
                    angular.module('app', ['ngRoute', 'ngResource'])
                        //---------------
                        // Services
                        //---------------
                        .factory('TendenceConfig', ['$resource', function ($resource) {
                            return $resource('/tendence/:id', null, {
                                'update': { method: 'PUT' },
                                'remove': { method: 'DELETE' }
                            });
                        }])
                        //---------------
                        // Controllers
                        //---------------
                        .controller('TendenciasController', ['$scope', 'TendenceConfig', function ($scope, TendenceConfig) {
                            $scope.tendenceConfigs = TendenceConfig.get();
                            $scope.nomeUsuario = '<%= username %>';
                            $scope.acessoUsuario = '<%= userAccess %>';
                            $scope.emailUsuario = '<%= userEmail %>';
                            
                            $scope.applyConfiguration = function(){
                                var args = $scope.tendenceConfigs;
                                TendenceConfig.update(args);
                                $.bigBox({
                                    title: "Informações sobre tendências",
                                    content: "Dados salvos com sucesso!",
                                    color: "#275B89",
                                    timeout: 5000,
                                    icon: "fa fa-check fadeInLeft animated"
                                });
                            };

                        }])
                        //---------------
                        // Routes
                        //---------------
                        .config(['$routeProvider', function ($routeProvider) {
                            $routeProvider
                                .when('/', {
                                    templateUrl: '/tendanalitics.html',
                                    controller: 'TendenciasController'
                                })
                        }]);
                </script>

            </div>
            <!-- END MAIN CONTENT -->

        </div>

        <!-- /.modal -->
        <script>
            $(document).ready(function () {
                
            });
            function resetarPadroes() {

            }
            
            
            function downloadDB() {
                $.SmartMessageBox({
                    title: "Download Banco de Dados",
                    content: "Preferencialmente, efetue o download da rede interna. Continuar?",
                    buttons: '[Não][Sim]'
                }, function (ButtonPressed) {
                    if (ButtonPressed === "Sim") {
                        window.location.href = '/moduloview/downloadDB/';
                    }
                });
            }
        </script>
        <% include partials/footer %>
</body>

</html>
