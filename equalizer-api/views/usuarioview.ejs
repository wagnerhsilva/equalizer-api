<!DOCTYPE html>
<html lang="en-us" ng-app="app">

<head>
    <% include partials/head %>
</head>

<body class="">
    <% include partials/header %>
        <div id="main" role="main">

            <!-- RIBBON -->
            <div id="ribbon">

                <!-- breadcrumb -->
                <ol class="breadcrumb">
                    <li>Configuração</li>
                    <li>Usuário</li>
                </ol>
            </div>
            <div id="content">
                <div class="row">
                    <article class="col-sm-12 col-md-12 col-lg-12">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                            <header>
                                <span class="widget-icon"><i class="fa fa-edit"></i></span>
                                <h2>Gerenciamento de Usuários </h2>

                            </header>

                            <!-- widget div-->
                            <div>

                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->

                                </div>
                                <!-- end widget edit box -->

                                <!-- widget content -->
                                <div class="widget-body">

                                    <form id="smart-form-register" class="smart-form">
                                        <ng-view></ng-view>
                                    </form>

                                </div>
                                <!-- end widget content -->

                            </div>
                            <!-- end widget div -->

                        </div>
                        <!-- end widget -->
                    </article>

                </div>
                <script type="text/ng-template" id="/usuarios.html">
                    <section>
                        <div class="widget-body no-padding">
                            <form name="formRegister">
                                <header>
                                    Formulário de registro
                                </header>

                                <fieldset>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-user"></i>
										<input type="text" name="nome" placeholder="Nome" ng-model="usuarioSelecionado.nome" required />
										<b class="tooltip tooltip-bottom-right">Informe o nome do usuário</b> </label>
                                    </section>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-user"></i>
										<input type="text" name="sobrenome" placeholder="Sobrenome" ng-model="usuarioSelecionado.sobreNome" required>
										<b class="tooltip tooltip-bottom-right">Informe o sobrenome do usuário</b> </label>
                                    </section>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-envelope"></i>
										<input type="email" name="email" placeholder="E-mail"  ng-model="usuarioSelecionado.email" required>
										<b class="tooltip tooltip-bottom-right">Informe o e-mail</b> </label>
                                    </section>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-phone"></i>
										<input type="text" name="telefone" placeholder="Telefone (99) 9999-9999" ng-model="usuarioSelecionado.telefone">
										<b class="tooltip tooltip-bottom-right">Informe o telefone</b> </label>
                                    </section>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-lock"></i>
										<input type="password" name="senha" placeholder="Senha" id="senha" ng-model="usuarioSelecionado.senha" required>
										<b class="tooltip tooltip-bottom-right">Informe a senha padrão</b> </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button id="btnGravarDb" class="btn btn-primary" ng-disabled="acessoUsuario != 'administrador'" ng-click="save();">Salvar</button>
                                    <input type="button" id="btnCancelarEdicao" class="btn btn-primary" value="Cancelar" style="display:none;" ng-click="cancelarEdicao();"
                                    />
                                </footer>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td>Nome</td>
                                        <td>Sobrenome</td>
                                        <td>Email</td>
                                        <td>Telefone</td>
                                        <td>Acesso</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="usuario in usuarios">
                                        <td>{{ usuario.nome }}</td>
                                        <td>{{ usuario.sobreNome }}</td>
                                        <td>{{ usuario.email }}</td>
                                        <td>{{ usuario.telefone }}</td>
                                        <td>
                                            <label ng-if="acessoUsuario == 'administrador'" class="select">
                                                <select name="ddlAcesso" id="ddlAcesso" ng-model="usuario.acesso" ng-change="updateAcesso($index)">
                                                    <option value="usuario">Usuário</option>
                                                    <option value="administrador">Administrador</option>
                                                </select>
                                                <i></i>
                                            </label>
                                        </td>
                                        <td align="center"><span class="glyphicon glyphicon-pencil" style="cursor:pointer;" title="Editar" ng-click="editar($index);"
                                                ng-if="acessoUsuario == 'administrador' || emailUsuario == usuario.email"></span>&nbsp&nbsp
                                            <span class="glyphicon glyphicon-trash" style="cursor:pointer;" title="Excluir" ng-if="acessoUsuario == 'administrador' && emailUsuario != usuario.email"
                                                ng-click="remove($index);"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </section>
                    </fieldset>

                </script>
                <script>
                    angular.module('app', ['ngRoute', 'ngResource'])
                        //---------------
                        // Services
                        //---------------
                        .factory('Usuarios', ['$resource', function ($resource) {
                            return $resource('/usuarios/:id', null, {
                                'update': { method: 'PUT' },
                                'remove': { method: 'DELETE' }
                            });
                        }])
                        //---------------
                        // Controllers
                        //---------------
                        .controller('UsuarioController', ['$scope', 'Usuarios', function ($scope, Usuarios) {
                            $scope.isEditing = false;
                            $scope.usuarios = Usuarios.query();
                            $scope.save = function () {
                                var usuario = $scope.usuarioSelecionado;
                                if (usuario == null)
                                    return;
                                if (usuario.sobreNome == null || usuario.sobreNome.trim() == "")
                                    return;
                                if (usuario.email == null || usuario.email.trim() == "")
                                    return;
                                if (usuario.senha == null || usuario.senha.trim() == "")
                                    return;
                                if ($scope.isEditing) {
                                    $scope.update();
                                } else {
                                    Usuarios.save(usuario);
                                    $scope.usuarioSelecionado = null;
                                    setTimeout(function () { $scope.usuarios = Usuarios.query(); }, 500);
                                }
                            }
                            $scope.remove = function (index) {
                                var usuario = $scope.usuarios[index];
                                Usuarios.delete({ id: usuario.id });
                                $scope.usuarios.splice(index, 1);
                            }
                            $scope.updateAcesso = function (index) {
                                var usuario = $scope.usuarios[index];
                                Usuarios.update({ id: usuario.id }, usuario);
                            }
                            $scope.update = function () {
                                var usuario = $scope.usuarioSelecionado;
                                if (usuario != null)
                                    Usuarios.update(usuario);
                                $scope.cancelarEdicao();
                            }
                            $scope.usuarioSelecionado = null;
                            $scope.editar = function (index) {
                                $scope.isEditing = true;
                                $scope.usuarioSelecionado = $scope.usuarios[index];
                                $('#btnGravarDb').val("Atualizar");
                                $("#btnGravarDb").prop('disabled', false);
                                $('#btnCancelarEdicao').show();
                            }
                            $scope.cancelarEdicao = function (index) {
                                $scope.isEditing = false;
                                $scope.usuarioSelecionado = null;
                                $('#btnGravarDb').val("Salvar");
                                $('#btnCancelarEdicao').hide();
                                if ($scope.acessoUsuario != 'administrador')
                                    $("#btnGravarDb").prop('disabled', true);
                                $scope.usuarios = Usuarios.query();
                            }
                            $scope.nomeUsuario = '<%= username %>';
                            $scope.acessoUsuario = '<%= userAccess %>';
                            $scope.emailUsuario = '<%= userEmail %>';
                        }])
                        //---------------
                        // Routes
                        //---------------
                        .config(['$routeProvider', function ($routeProvider) {
                            $routeProvider
                                .when('/', {
                                    templateUrl: '/usuarios.html',
                                    controller: 'UsuarioController'
                                })
                        }]);
                </script>

            </div>
            <!-- END MAIN CONTENT -->

        </div>
        <% include partials/footer %>
</body>

</html>